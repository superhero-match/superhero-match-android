<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivUserProfileSettings"
        android:layout_marginBottom="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivUserProfileSettings"
        android:src="@drawable/settings_256"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:contentDescription="@string/user_profile_settings"
        android:layout_marginBottom="65dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivUserProfileAddNewPic"
        android:src="@drawable/new_profile_picture_256"
        android:clickable="true"
        android:focusable="true"
        android:layout_toEndOf="@+id/ivUserProfileSettings"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/user_profile_image"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="40dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivUserProfileInformation"
        android:src="@drawable/information_256"
        android:clickable="true"
        android:focusable="true"
        android:layout_toStartOf="@+id/ivUserProfileEdit"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/user_profile_image"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="40dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivUserProfileEdit"
        android:src="@drawable/edit_256"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/user_profile_edit"
        android:layout_marginBottom="65dp"
        android:visibility="visible"/>
</RelativeLayout>