<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:id="@+id/ivSuggestionProfilePic"
        android:src="@drawable/test"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/user_profile_image"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSuggestionName"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/ivSuggestionProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSuggestionAgeGender"
        android:textSize="14sp"
        android:layout_below="@+id/tvSuggestionName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivSuperPowerIconSuggestion"
        android:src="@drawable/superpower_256"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvSuggestionAgeGender"
        android:contentDescription="@string/super_power"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSuggestionSuperPowerDesc"
        android:layout_below="@+id/tvSuggestionAgeGender"
        android:layout_toEndOf="@+id/ivSuperPowerIconSuggestion"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivSuggestionDislike"
        android:src="@drawable/dislike_512"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvSuggestionSuperPowerDesc"
        android:layout_marginStart="25dp"
        android:contentDescription="@string/user_profile_settings"
        android:layout_marginTop="25dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivSuggestionLike"
        android:src="@drawable/like_512"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvSuggestionSuperPowerDesc"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/user_profile_edit"
        android:layout_marginTop="25dp"
        android:visibility="visible"/>
</RelativeLayout>