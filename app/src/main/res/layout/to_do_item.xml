<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_margin="10dp"
    android:id="@+id/rlToDoItem">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ivToDoMainProfilePic"
        android:clickable="true"
        android:focusable="true"
        android:maxHeight="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/user_profile_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvToDoUsernameAge"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="User, 32"
        android:layout_below="@+id/ivToDoMainProfilePic"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvToDoCityCountry"
        android:textSize="14sp"
        android:text="Utrecht, Netherlands"
        android:layout_below="@+id/tvToDoUsernameAge"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>