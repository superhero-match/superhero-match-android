<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/ivProfilePictureItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/my_image_view"
        android:clickable="true"
        android:contentDescription="@string/user_profile_image"
        android:focusable="true"
        android:maxHeight="400dp"
        android:src="@drawable/test" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivProfilePictureEdit"
        android:src="@drawable/edit_256"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivProfilePictureItem"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/user_profile_edit"
        android:visibility="visible"/>

</RelativeLayout>