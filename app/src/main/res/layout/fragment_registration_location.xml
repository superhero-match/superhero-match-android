<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rlRegistrationMyCountry"
        android:background="@drawable/my_relative_layout"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMyCountrySpinnerDesc"
            android:text="@string/my_country"
            android:layout_margin="15dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spMyCountry"
            android:layout_toEndOf="@+id/tvMyCountrySpinnerDesc"
            android:layout_margin="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rlRegistrationMyCity"
        android:background="@drawable/my_relative_layout"
        android:layout_margin="10dp"
        android:layout_below="@+id/rlRegistrationMyCountry">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etMyCity"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:hint="@string/type_in_your_city"/>

    </RelativeLayout>

</RelativeLayout>