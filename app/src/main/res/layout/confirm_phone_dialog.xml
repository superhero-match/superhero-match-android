<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/tvPlusSignConfirmPhoneDialog"
        android:text="@string/plus"
        android:textSize="24sp"
        android:layout_marginTop="35dp"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumberConfirmPhoneDialog"
        android:layout_toEndOf="@+id/tvPlusSignConfirmPhoneDialog"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/mytextview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSecondQuestionConfirmPhoneDialog"
        android:text="@string/edit_number"
        android:textSize="16sp"
        android:lineSpacingExtra="3dp"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvPlusSignConfirmPhoneDialog"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

</RelativeLayout>