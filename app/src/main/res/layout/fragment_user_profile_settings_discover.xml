<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rlUserProfileSettingsDiscoverShow"
        android:background="@drawable/my_relative_layout"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserProfileSettingsDiscoverDesc"
            android:text="@string/show_me_on_discover"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <Switch
            android:id="@+id/swUserProfileSettingsDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/rlUserProfileSettingsDiscoverCountry"
        android:background="@drawable/my_relative_layout"
        android:layout_margin="10dp"
        android:layout_below="@+id/rlUserProfileSettingsDiscoverShow">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserProfileSettingsDiscoverCountryDesc"
            android:text="@string/only_from_my_country"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <Switch
            android:id="@+id/swUserProfileSettingsDiscoverCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

</RelativeLayout>