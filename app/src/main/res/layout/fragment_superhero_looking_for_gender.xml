<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSuperHeroLookingForGenderQ"
        android:text="@string/your_favorite_gender"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="160dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnSuperHeroLookingForGenderMale"
        android:layout_below="@+id/tvSuperHeroLookingForGenderQ"
        android:layout_toStartOf="@+id/btnSuperHeroLookingForGenderBoth"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/my_gender_button"
        android:text="@string/male"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnSuperHeroLookingForGenderBoth"
        android:layout_below="@+id/tvSuperHeroLookingForGenderQ"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_gender_button"
        android:text="@string/both"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnSuperHeroLookingForGenderFemale"
        android:layout_below="@+id/tvSuperHeroLookingForGenderQ"
        android:layout_toEndOf="@+id/btnSuperHeroLookingForGenderBoth"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/my_gender_button"
        android:text="@string/female"/>

</RelativeLayout>